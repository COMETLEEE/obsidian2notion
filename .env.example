# Notion API Configuration
# Get your integration token from: https://www.notion.so/my-integrations
NOTION_TOKEN=secret_1234567890abcdef...

# Optional: AWS S3 Configuration for image uploads
# Only needed if you want to store images on S3 instead of locally
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here
S3_BUCKET_NAME=your-notion-images-bucket
S3_REGION=us-east-1

# Optional: Custom S3 Domain for migration scripts
# Format: your-bucket-name.s3.amazonaws.com or your-custom-domain.com
S3_DOMAIN=your-bucket.s3.amazonaws.com

# Optional: Dry run mode for testing (true/false)
# When enabled, shows what would be done without making actual changes
DRY_RUN=false

# Optional: Debug mode for detailed logging (true/false)
DEBUG=false
